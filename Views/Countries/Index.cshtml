@model IEnumerable<Identity.Models.Country>

@{
    ViewData["Title"] = "Admin Countries";
}

<h1 class="bg-info text-white">Admin Countries</h1>

@if (User.IsInRole("SuperAdmin"))
{
    <div class="container-fluid">
        <ul>
            <li><a asp-action="Admin" class="btn btn-success">Users</a></li>
            <li> <a asp-action="Create" class="btn btn-primary">Create New Country</a></li>
            <li><a asp-action="Cities" class="btn btn-success">Cities</a></li>
            <li><a asp-action="Role" class="btn btn-success">Role</a></li>
            <li><a asp-action="Claims" class="btn btn-success">Claims</a></li>
            <li><a asp-controller="Account" asp-action="Logout" class="btn btn-danger right">Logout</a></li>
        </ul>
    </div>
}
else
{
    <div class="container-fluid">
        Hi @User.Identity.Name, you're only a regular user so all you see is this useless userslist.
        <ul>
            <li><a asp-controller="Account" asp-action="Logout" class="btn btn-danger right">Logout</a></li>
        </ul>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                Country
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)

                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
